{
  "compilerOptions": {
    "composite": true,        // Required for project references
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": ".vercel/api-output",
    "rootDir": ".",          // Changed to include all referenced files
    "declaration": true,     // Required for project references
    "declarationMap": true   // Helpful for project references
  },
  "include": [
    "api/**/*.js", 
    "api/**/*.ts",
    "vite.config.js",
    "tailwind.config.js"
  ]
}